// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

*
	box-sizing: border-box
	-webkit-font-smoothing: antialiased;
html
	overflow-x: hidden !important

body
	padding: 10px 10px
	padding-right: 0px
	
	padding-left: 0px;
.container
	width: 100%;

#main-content
	margin-right: 0px
	margin-left: 0px;
#content
	padding-right: 0px
	padding-left: 0px;
img
	image-rendering: auto;

marker#licensing
	fill: green;
path.link.licensing
	stroke: green;
path.link.resolved
	stroke-dasharray: 0,2 1;
circle
	stroke: #333;
text
	font: 10px sans-serif
	pointer-events: none;
text.shadow
	stroke: #fff
	stroke-width: 3px
	stroke-opacity: .8;
#map
	width:100%
	height: 970px;
row
	margin-right: -15px
	margin-left: -15px;
cantainer.paratext-info
	height: 700px;
#header
	border-color: #FFFFFF;
	font-family:"Gill Sans",sans-serif
	font-size:47px
	font-weight:bold
	line-height:9px
	-webkit-text-stroke-width:1px;

#headercollapse > ul > li:nth-child(1) > a
	margin-left: 10px;
#footer
	color: rgb(72,72,72)
	border-color: #FFFFFF;
	font-family:"Gill Sans",sans-serif
	font-size:11px
	font-weight:light
	margin-left:40px
	line-height:12px;